<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/savingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_savings_goal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/goalTargetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/goal_name"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/savingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/savingsTargetInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_goal_amount"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/goalTargetName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Deadline Selector -->
    <Button
        android:id="@+id/selectDeadlineBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_deadline"
        app:layout_constraintTop_toBottomOf="@id/savingsTargetInput"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/goalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_not_set"
        android:textSize="18sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/selectDeadlineBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/deadlineDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deadline_not_set"
        android:textSize="18sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/selectDeadlineBtn"
        app:layout_constraintStart_toEndOf="@id/goalName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15sp"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/savingsProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:progress="50"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_style"
        app:layout_constraintTop_toBottomOf="@id/deadlineDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/updateGoalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_goal"
        app:layout_constraintTop_toBottomOf="@id/savingsProgress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
